@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<script>
    function copyurl(urlvalue) {
        console.log(urlvalue);
        document.getElementById("imgurl").value = urlvalue;
    }
</script>


<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Select Avatar</label>
                    <input hidden id="imgurl" asp-for="Input.ImageUrl" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <img onclick="copyurl('https://ambiance-accountants.co.uk/wp-content/uploads/2020/07/About-us.jpg')" class="img-thumbnail" src="https://ambiance-accountants.co.uk/wp-content/uploads/2020/07/About-us.jpg" />
                    </div>
                    <div class="col-sm-4">
                        <img onclick="copyurl('https://img.freepik.com/free-vector/young-man-avatar-character-vector-illustration-design_24877-18517.jpg?size=338&ext=jpg')" class="img-thumbnail" src="https://img.freepik.com/free-vector/young-man-avatar-character-vector-illustration-design_24877-18517.jpg?size=338&ext=jpg" />
                    </div>
                    <div class="col-sm-4">
                        <img onclick="copyurl('https://thumbs.dreamstime.com/b/male-avatar-icon-flat-style-male-user-icon-cartoon-man-avatar-hipster-vector-stock-91462914.jpg')" class="img-thumbnail" src="https://thumbs.dreamstime.com/b/male-avatar-icon-flat-style-male-user-icon-cartoon-man-avatar-hipster-vector-stock-91462914.jpg" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <img onclick="copyurl('https://us.123rf.com/450wm/aurora72/aurora721606/aurora72160600006/59282564-avatar-girls-icon.jpg?ver=6')" class="img-thumbnail" src="https://us.123rf.com/450wm/aurora72/aurora721606/aurora72160600006/59282564-avatar-girls-icon.jpg?ver=6" />
                    </div>
                    <div class="col-sm-4">
                        <img onclick="copyurl( 'https://us.123rf.com/450wm/aurora72/aurora721606/aurora72160600004/59282566-avatar-girls-icon-woman-icon-illustration-face-of-female-icons-cartoon-style-isolated-woman-avatar-f.jpg?ver=6')" class="img-thumbnail" src="https://us.123rf.com/450wm/aurora72/aurora721606/aurora72160600004/59282566-avatar-girls-icon-woman-icon-illustration-face-of-female-icons-cartoon-style-isolated-woman-avatar-f.jpg?ver=6" />
                    </div>
                    <div class="col-sm-4">
                        <img onclick="copyurl( 'https://static.vecteezy.com/system/resources/thumbnails/001/993/889/small_2x/beautiful-latin-woman-avatar-character-icon-free-vector.jpg')" class="img-thumbnail" src="https://static.vecteezy.com/system/resources/thumbnails/001/993/889/small_2x/beautiful-latin-woman-avatar-character-icon-free-vector.jpg" />
                    </div>
                </div>

                <br />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
