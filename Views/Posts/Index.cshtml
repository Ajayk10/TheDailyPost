<hr />
@foreach (var item in Model)
        {
            var item_id = item.Id;
            <a style="text-decoration: none; color: black;" asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id">
                 <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="@item.AuthorImg" style="min-width:30px;max-width:50px;border-radius:100%;" asp-append-version="true">
                        <span class="h5" style="margin-left:10px;margin-bottom:10px;">@item.Author</span><br />
                        <center> <img src="@("~/Images/" + item.ImageName)" class="img-fluid rounded-start container" alt="..." asp-append-version="true"></center>
                    </div><br />
                    <div class="col-md-6">
                        <div class="card-body">
                            <h4>@item.Title</h4>
                            <p class="card-text">@item.Content[0..40] <b>...</b></p>
                            <hr />
                            <i style="color: #2772c2;" class="fas fa-heart"></i> @item.LikeCount
                            <p style="float:right;" class="card-text"><small class="text-muted">Posted on - @item.Date/@item.Month/@item.Year</small></p>
                        </div>
                    </div>

                </div>
            </div>
            </a>
    }
